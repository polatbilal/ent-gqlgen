type JobPayments {
  id: Int
  PaymentNo: Int
  PaymentDate: Time
  PaymentType: String
  TotalPayment: Float
  LevelRequest: Float
  LevelApprove: Float
  Amount: Float
  State: String
  YibfNo: Int
  updatedAt: Time
}

input JobPaymentsInput {
  PaymentNo: Int!
  PaymentDate: Time
  PaymentType: String
  TotalPayment: Float
  LevelRequest: Float
  LevelApprove: Float
  Amount: Float
  YibfNo: Int
  State: String
}

extend type Query {
  jobPayments(yibfNo: Int!): [JobPayments!] @auth
}

extend type Mutation {
  upsertPayments(id: Int, input: JobPaymentsInput!): JobPayments
    @goField(forceResolver: true)
    @auth

  createJobPayments(input: JobPaymentsInput!): JobPayments
    @goField(forceResolver: true)
    @auth

  updateJobPayments(id: Int!, input: JobPaymentsInput!): JobPayments
    @goField(forceResolver: true)
    @auth
  deleteJobPayments(id: Int!): JobPayments @goField(forceResolver: true) @auth
}
