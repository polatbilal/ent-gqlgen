directive @goField(
  forceResolver: Boolean
  Name: String
) on FIELD_DEFINITION | INPUT_FIELD_DEFINITION

directive @auth on FIELD_DEFINITION

scalar Time

type AuthPayload {
  token: String!
  userID: ID!
  username: String!
  name: String!
  role: String!
}

type Mutation {
  register(
    username: String!
    name: String
    email: String
    password: String!
  ): AuthPayload!
  login(username: String!, password: String!): AuthPayload!
}
